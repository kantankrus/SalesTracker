<script>
    function salesPersonFilter(element) {
        element.kendoDropDownList({
            dataSource: {
                transport: {
                    read: "@Url.Action("GetSalesPeople", "Grid")"
                }
            },
            optionLabel: "[Sales Person]"
        });
    }


</script>
